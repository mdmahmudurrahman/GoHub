<div class="container login-form">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-md-12">
              <h4 class="active" id="login-form-link">Login</h4>
            </div>
          </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field form-group">
                  <%= f.email_field :email, id: "username", tabindex: "2",
                    class: "form-control", placeholder: "Email", autofocus: true %>
                </div>

                <div class="field form-group">
                  <%= f.password_field :password, id: "password", tabindex: "2",
                    class: "form-control", placeholder:"Password", autocomplete: "off" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <div class="field form-group text-center">
                      <%= f.check_box :remember_me, class: "", id: "remember" %>
                      <%= f.label :remember_me %>
                    </div>
                <% end -%>

                <div class="actions form-group">
                  <div class="row">
                    <%= f.submit "Log in", id:"login-submit", tabindex: "4",
                      class: "form-control btn btn-login" %>
                  </div>
                </div>
              <% end %>

              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="text-center">
                          <%= link_to "Forgot your password?", "#", class: "forgot-password" %><br />
                        </div>
                      </div>
                    </div>
                  </div>
              <% end -%>
              <div class="form-group">
                <div class="third-party-login row">
                  <div class="col-md-6 form-group">
                    <%= link_to t("login.login_with_fb"), user_facebook_omniauth_authorize_path,
                      class: "btn btn-primary btn-lg fb-provider " %>
                  </div>
                  <div class="col-md-6 form-group">
                    <%= link_to t("login.login_with_gog"), user_google_oauth2_omniauth_authorize_path,
                      class: "btn btn-danger btn-lg google-provider " %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
