<div class="container company-information">
  <div class="page-header">
    <div class="progress">
      <div class="progress-bar progress-bar-info progress-bar-striped active"
        role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"
        style="width: 30%">
        30% completed
      </div>
    </div>
    <h3>Company information</h3>
  </div>
  <div>
    <%= form_for current_user, url: company_path(current_user), html: {
      class: "col-md-6"} do |u| %>
      <div id="company-information-form">
        <div class="form-group row">
          <%= u.label :company_name, class:"col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= u.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= u.label :address_line_1, class:"col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= u.text_field :address_line_1, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= u.label :address_line_2, class:"col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= u.text_field :address_line_2, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= u.label :zipcode, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-2 col-sm-offset-2">
            <%= u.text_field :zipcode, class: "form-control" %>
          </div>
          <%= u.label :city, class:"col-sm-2 col-form-label",
            id: "company-information-city" %>
          <div class="col-sm-4">
            <%= u.text_field :city, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= u.label :country, class:"col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= u.text_field :country, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= u.label :vat_id_number, class:"col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= u.text_field :vat_id_number, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= u.label :phone_number, class:"col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= u.text_field :phone_number, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row company-information-submit pull-right">
        <div class="col-sm-12">
          <%= link_to "Cancel", company_settings_path,
            class:"btn btn-default btn-sm",
            id:"company-information-btn-cancel" %>
          <%= u.submit "Save", class: "btn btn-info btn-sm",
            id: "company-information-btn-submit" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-5">
      <div class="w3-panel w3-note">
        <p class="">
          Dynamic error message panel...
        </p>
      </div>
    </div>
  </div>
</div>
